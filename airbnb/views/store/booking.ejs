<%- include('../partial/header'); %>
<body>
    <%- include('../partial/navBar'); %>
    <div class="container mx-auto px-4 py-4">
        <h2 class="text-4xl font-bold text-rose-600 mb-6 text-center">Here Booking Home Details</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <% registeredHome.forEach(element => {%>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <img src="<%= element.photoURL %>" alt="<%= element.hname %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= element.hname %></h3>
                        <p class="text-gray-600 mb-2">
                            <span class="font-medium">Price per night:</span> $<%= element.pnight %>
                        </p>
                        <p class="text-gray-600 mb-2">
                            <span class="font-medium">Location:</span> <%= element.location %>
                        </p>
                        <div class="flex items-center">
                            <span class="font-medium text-gray-600 mr-2">Rating:</span>
                            <span class="text-yellow-500"><%= element.rating %> â˜…</span>
                        </div>
                        <button class="mt-2 rounded-md px-2 py-1 font-medium bg-green-500 hover:bg-green-700 hover:text-white">Delete Home</button>
                        <button class="mt-3 rounded-md px-2 py-1 font-medium bg-green-500 hover:bg-green-700 hover:text-white ml-4">Details Home</button>

                    </div>
                </div>
            <%}); %>
        </div>
    </div>
</body>
</html>